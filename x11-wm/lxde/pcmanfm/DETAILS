         VERSION=1.3.2
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$SFORGE_URL/$MODULE
      SOURCE_VFY=sha256:14cb7b247493c4cce65fbb5902611e3ad00a7a870fbc1e50adc50428c5140cf7
        WEB_SITE=http://pcmanfm.sourceforge.net
