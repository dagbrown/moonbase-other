depends cmake
depends libXmu

optional_depends %JPEG \
                 " -DJAS_ENABLE_LIBJPEG=ON" \
                 " -DJAS_ENABLE_LIBJPEG=OFF" \
                 "for JPEG support"

optional_depends freeglut \
                 " -DJAS_ENABLE_OPENGL=ON" \
                 " -DJAS_ENABLE_OPENGL=OFF" \
                 "for OpenGL support"

optional_depends doxygen \
                 "-DJAS_ENABLE_DOC=ON" \
                 "-DJAS_ENABLE_DOC=OFF" \
                 "for documentation install" \
                 "n"
