          MODULE=librsvg
         VERSION=2.54.2
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$GNOME_URL/sources/$MODULE/${VERSION%.*}
      SOURCE_VFY=sha256:a79f6ff79e70de66e535b066a73fb45255d1b29c926f31c8869ba4f27e7418d2
