depends expat
depends zlib
depends libpng
depends libssh

optional_depends brotli  "-DEXIV2_ENABLE_BROTLI=ON" "-DEXIV2_ENABLE_BROTLI=OFF" \
        "for using Brotli for JPEG XL compressed boxes (BMFF)"
optional_depends gettext "-DEXIV2_ENABLE_NLS=ON"  "" "for NLS support"
optional_depends curl    "-DEXIV2_ENABLE_CURL=ON" "" "for curtl support"
