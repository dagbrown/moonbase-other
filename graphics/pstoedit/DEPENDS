depends ghostscript
depends libgd

optional_depends ImageMagick "--with-magick"  "--without-magick"  "for ImageMagick graphics support" y
optional_depends ming        "--with-swf"     "--without-swf"     "for flash support" y
optional_depends plotutils   "--with-libplot" "--without-libplot" "for addtional formats support" y

optional_depends libemf \
                 "--with-emf --with-libemf-include=/usr/include/libEMF" \
                 "--without-emf" \
                 "for vector graphics support" y
