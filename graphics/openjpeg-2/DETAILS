          MODULE=openjpeg-2
         VERSION=2.5.2
          SOURCE=$MODULE-$VERSION.tar.gz
 SOURCE_URL_FULL=https://github.com/uclouvain/openjpeg/archive/refs/tags/v$VERSION.tar.gz
      SOURCE_VFY=sha256:90e3896fed910c376aaf79cdd98bdfdaf98c6472efd8e1debf0a854938cbda6a
