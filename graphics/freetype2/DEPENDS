depends meson
depends zlib
depends bzip2

optional_depends libpng "-D png=enabled"    "-D png=disabled"    "for support of png compressed OpenType embeded bitmaps"
optional_depends brotli "-D brotli=enabled" "-D brotli=disabled" "for brotli compression support"

