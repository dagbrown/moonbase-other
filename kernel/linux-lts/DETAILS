          MODULE=linux-lts
         VERSION=6.6.21
            BASE=$(echo $VERSION | cut -d. -f1,2)
          SOURCE=linux-$BASE.tar.xz
if [ -n "$(echo $VERSION | cut -d. -f3)" ] ; then
         SOURCE2=patch-$VERSION.xz
fi
