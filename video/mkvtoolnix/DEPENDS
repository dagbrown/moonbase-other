depends libvorbis
depends ruby
depends zlib

optional_depends libebml     "" "" "use external libebml"
optional_depends libmatroska "" "" "use external libmatroska"

optional_depends curl  "--with-curl"  "--without-curl"  "for curl support"
optional_depends flac  "--with-flac"  "--without-flac"  "for flac audio codec"
optional_depends boost "--with-boost" "--without-boost" "for boost support"
optional_depends qt5   "--enable-qt"  "--disable-qt"    "for Qt based GUI"
