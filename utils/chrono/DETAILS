      SOURCE_URL=https://github.com/esselfe/$MODULE/releases/download/$MODULE-$VERSION
      SOURCE_VFY=sha256:2f4d77952358ee78ce96eb66ca561b3be482b383a6bbc63edd69969c6f1507cf
