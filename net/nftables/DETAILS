      SOURCE_URL=https://netfilter.org/projects/nftables/files/
      SOURCE_VFY=sha256:6358830f3a64f31e39b0ad421d7dadcd240b72343ded48d8ef13b8faf204865a
        WEB_SITE=https://netfilter.org/projects/nftables/
         ENTERED=20241019
