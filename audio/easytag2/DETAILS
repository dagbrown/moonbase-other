          SOURCE=${MODULE%2*}-$VERSION.tar.xz
      SOURCE_URL=http://download.gnome.org/sources/easytag/${VERSION%.*}/
SOURCE_DIRECTORY=$BUILD_DIRECTORY/${MODULE%2*}-$VERSION
