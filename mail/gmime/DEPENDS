depends glib-2
depends pkgconfig
depends zlib

optional_depends gpgme "" "" "for GnuPG crypto support"

optional_depends gtk-sharp \
                 "--enable-mono" \
                 "--disable-mono" \
                 "to enable the mono bindings"

optional_depends gobject-introspection \
                 "--enable-introspection" \
                 "--disable-introspection" \
                 "for object introspection"

