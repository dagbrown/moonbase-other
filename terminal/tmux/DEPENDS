depends libevent
depends ncurses

optional_depends libutempter \
                 "--enable-utempter" \
                 "--disable-utempter" \
                 "for session logging in utmp and wtmp files"

optional_depends libutf8proc \
                 "--enable-utf8proc" \
                 "--disable-utf8proc" \
                 "for UTF-8 unicode string support"
