depends curl
depends xalan-c
depends dev86
depends glslang
depends libxslt
depends libXcursor
depends alsa-lib
depends libcap
depends libIDL
depends libvpx
depends shared-mime-info
depends makeself
depends acpica-unix
depends opus
depends zlib

# Per LocalConfig.kmk headless stuff will be installed regardless,
# so make this a depends
depends qt5

optional_depends lvm2       "" "--disable-devmapper" "for device mapper support"
optional_depends mesa-lib   "" "--disable-opengl"    "for OpenGL support"
optional_depends pulseaudio "" "--disable-pulse"     "for pulseaudio backend"
optional_depends SDL_ttf    "" "--disable-sdl-ttf"   "for SDL support,${PROBLEM_COLOR} say yes if yes to qt5${DEFAULT_COLOR}"
optional_depends libvpx     "" "--disable-libvpx"    "for libvpx video capturing support"

#Java 11 and newer have removed  wsimport and wsgen tools which virtaulbox needs
optional_depends OpenJDK8U-jdk "" "--disable-java"      "for Java bindings"

optional_depends vde-2  "--enable-vde" "" "for Virtual Distributed Ethernet support"

# gsoap needs java
if in_depends $MODULE OpenJDK8U-jdk; then
  optional_depends gsoap "--enable-webservice" "--disable-webservice" "for webservices and xml application support"
fi
